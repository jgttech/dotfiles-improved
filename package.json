{
	"name": "dotfiles",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"workspaces": ["packages/*", "tools/*"],
	"scripts": {
		"+dev": "make dev",
		"+rebuild": "make rebuild",
		"+nuke": "make nuke",
		"+clean": "make clean",
		"+ssh": "make ssh",
		"+config": "make config",
		"+install": "make install",
		"+go": "make go",
		"+odin": "make odin",
		"+zig": "make zig",
		"+python": "make python",
		"+typescript": "make typescript",
		"@go": "bun --cwd tools/go",
		"@odin": "bun --cwd tools/odin",
		"@python": "bun --cwd tools/python",
		"@typescript": "bun --cwd tools/typescript",
		"@zig": "bun --cwd tools/zig"
	},
	"devDependencies": {
		"@types/node": "^22.10.4"
	}
}
